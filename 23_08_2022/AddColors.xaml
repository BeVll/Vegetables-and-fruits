<Page x:Class="_23_08_2022.AddColors"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_23_08_2022"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="576" d:DesignWidth="735"
      Title="AddColors">

    <Grid Background="#22262B">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Add Colors" FontSize="55" Foreground="#AEC2DB" HorizontalAlignment="Center" FontFamily="Comic Sans MS"/>
            <Border Height="2" Background="#AEC2DB" Margin="0,10"/>
            <TextBox x:Name="Name" materialDesign:HintAssist.Hint="Name" Width="250" Style="{DynamicResource MaterialDesignTextBox}" Padding="5"  Background="#181B1E" Foreground="#5A6471" FontFamily="Comic Sans MS" Margin="5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Add" Width="120" Margin="5" Click="Button_Click"/>
                <Button Content="Cancel" Width="120" Margin="5" Click="Button_Click_1"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>